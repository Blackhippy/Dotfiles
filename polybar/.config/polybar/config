[colors]
bg = #260000
fg = #e9c1c5
icon = #D26C70
border = #ffffff

[bar/bottom]

monitor = HDMI-A-0
bottom = true
background = ${colors.bg}
foreground = ${colors.fg}
border-top-size = 7
border-top-color = ${colors.border}

padding-left = 3
padding-right =4
width = 30%
height = 40
module-margin-left = 1
module-margin-right = 1
offset-x = 35%
offset-y = 1%

font-0 = leggie:size=10
font-3 = cherry:size=10
font-1 = fontawesome:pixelsize=9

modules-left = mpd
modules-center = date
modules-right =  vpn screenshot logout

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6601
interval = 1

content  = <label-icon> <label-song>
label-song = %{F#D26C70}%{F-}  %artist% - %title%
label-song-padding = 1

[module/date]
type = internal/date
interval = 1.0

date = %A %d
time = %I:%M%p
format = <label>
label =%{F#D26C70}%{F-} %date%, %time%

[module/vpn]
type= custom/text
content = 
content-foreground = ${colors.icon}
content-background = $(colors.bg)
#content-padding = 1
click-left = nmcli con up arch && notify-send 'Polybar' 'Vpn Running' --icon=dialog-information
click-right = nmcli con down arch && notify-send 'Polybar' 'Vpn Shutting Down' --icon=dialog-information

[module/screenshot]
type = custom/text
content = 
content-foreground = ${colors.icon}
content-background = ${colors.bg}
#content-padding = 1
click-left = nougat -f && notify-send 'Polybar' 'Screenshot taken' --icon=dialog-information


[module/logout]
type = custom/text
content = 
content-foreground = ${colors.icon}
content-background = ${colors.bg}
#content-padding = 1
click-left = notify-send 'Polybar' 'Loggin out in 5 seconds' --icon=dialog-information && sleep 5 && pkill x




